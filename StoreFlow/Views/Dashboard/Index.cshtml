@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadComponentPartial")

<body>
    <div class="container-scroller">

        @await Component.InvokeAsync("_NavbarComponentPartial")

        <div class="container-fluid page-body-wrapper">

            @await Component.InvokeAsync("_ThemeSettingsWrapperComponentPartial")

            @await Component.InvokeAsync("_RightSidebarComponentPartial")

            @await Component.InvokeAsync("_SidebarComponentPartial")

            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="page-header">
                        <h3 class="page-title">
                            Dashboard
                        </h3>
                    </div>

                    @await Component.InvokeAsync("_CardStatisticsComponentPartial")

                    @await Component.InvokeAsync("_ChartComponentPartial")

                    <div class="row">

                        @await Component.InvokeAsync("_SaleStatusComponentPartial")

                        @await Component.InvokeAsync("_ActivityComponentPartial")

                        @await Component.InvokeAsync("_DailySalesComponentPartial")

                    </div>

                    <div class="row">

                        @await Component.InvokeAsync("_Last5MessagesComponentPartial")

                    </div>

                    <div class="row">

                        @await Component.InvokeAsync("_SalesDataComponentPartial")

                    </div>

                    <div class="row">

                        @await Component.InvokeAsync("_TodoComponentPartial")

                        @await Component.InvokeAsync("_Last5ProductsComponentPartial")
                   
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-md-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center mb-3 mb-md-0">
                                            <button class="btn btn-social-icon btn-facebook btn-rounded">
                                                <i class="fab fa-facebook-f"></i>
                                            </button>
                                            <div class="ml-4">
                                                <h5 class="mb-0">Facebook</h5>
                                                <p class="mb-0">813 friends</p>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center mb-3 mb-md-0">
                                            <button class="btn btn-social-icon btn-twitter btn-rounded">
                                                <i class="fab fa-twitter"></i>
                                            </button>
                                            <div class="ml-4">
                                                <h5 class="mb-0">Twitter</h5>
                                                <p class="mb-0">9000 followers</p>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center mb-3 mb-md-0">
                                            <button class="btn btn-social-icon btn-google btn-rounded">
                                                <i class="fab fa-google-plus-g"></i>
                                            </button>
                                            <div class="ml-4">
                                                <h5 class="mb-0">Google plus</h5>
                                                <p class="mb-0">780 friends</p>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <button class="btn btn-social-icon btn-linkedin btn-rounded">
                                                <i class="fab fa-linkedin-in"></i>
                                            </button>
                                            <div class="ml-4">
                                                <h5 class="mb-0">Linkedin</h5>
                                                <p class="mb-0">1090 connections</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @await Component.InvokeAsync("_FooterComponentPartial")

            </div>
        </div>
    </div>

    @await Component.InvokeAsync("_ScriptComponentPartial")

</body>
</html>
