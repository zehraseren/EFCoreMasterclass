@model List<ProductListByCategoryViewModel>

@{
    ViewData["Title"] = "Skip4ProductsList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">İlk 4 Ürünü Atla - Sonraki 10 Ürünü Getir</h4>
                <div class="card-description d-flex justify-content-between align-items-center">
                    <code>Kategori ile ilgili işlemlerinizi buradan yapabilirsiniz.</code>
                    <div class="none-border">
                        <a href="/Product/CreateProduct/" class="btn btn-outline-primary btn-rounded mr-2">Yeni Ürün Girişi</a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Ürün Fiyatı</th>
                                <th>Ürün Stok</th>
                                <th>Kategori Adı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductPrice</td>
                                    <td>@item.ProductStock</td>
                                    <td>@item.CategoryName</td>
                                    <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                                    <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>