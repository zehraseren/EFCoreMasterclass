@model List<Order>

@{
    ViewData["Title"] = "OrderListByStatus";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sipariş Listesi</h4>
                <div class="card-description d-flex justify-content-between align-items-center">
                    <form method="get" asp-controller="Order" asp-action="OrderListByStatus">
                        <select name="status" class="form-select" asp-items="@(ViewBag.statusList as List<SelectListItem>)" onchange="this.form.submit();"></select>
                    </form>
                    <div class="none-border">
                        <a href="/Order/CreateOrder/" class="btn btn-outline-primary btn-rounded mr-2">Yeni Sipariş Girişi</a>
                    </div>
                </div>
                <div class="table-responsive">
                    @if (ViewBag.message != null)
                    {
                        <div class="alert alert-warning">@ViewBag.message</div>
                    }
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Müşteri Adı</th>
                                <th>Sipariş Adet</th>
                                <th>Birim Fiyat</th>
                                <th>Toplam Fiyat</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.ProductId</td>
                                    <td>@item.CustomerId</td>
                                    <td>@item.OrderCount</td>
                                    <td>@item.UnitPrice</td>
                                    <td>@item.TotalPrice</td>
                                    <td>@item.Status.GetDescription()</td>
                                    <td><a href="/Order/DeleteOrder/@item.OrderId" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                                    <td><a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>