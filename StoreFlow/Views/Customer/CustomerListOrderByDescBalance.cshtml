@model List<Customer>

@{
    ViewData["Title"] = "CustomerListOrderByDescBalance";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Müşteri Listesi Bakiye Değerine Göre (Z - A)</h4>
                <div class="card-description d-flex justify-content-between align-items-center">
                    <code>Müşteri ile ilgili işlemlerinizi buradan yapabilirsiniz.</code>
                    <div class="none-border">
                        <a href="/Customer/CreateCustomer/" class="btn btn-outline-primary btn-rounded mr-2">Yeni Müşteri Girişi</a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Müşteri Adı Soyadı</th>
                                <th>İl/İlçe</th>
                                <th>Bakiye</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.CustomerName @item.CustomerSurname</td>
                                    <td>@item.CustomerCity/@item.CustomerDistrict</td>
                                    <td style="font-family: Calibri">@item.CustomerBalance.ToString("C2")</td>
                                    <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                                    <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>