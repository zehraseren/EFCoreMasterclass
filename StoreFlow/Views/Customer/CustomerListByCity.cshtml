@{
    ViewData["Title"] = "CustomerListByCity";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Şehirde Müşteri Var mı?</h4>
                <form asp-action="CustomerListByCity" class="forms-sample" method="get">
                    <div class="form-group">
                        <label for="exampleInputName1">Şehir Adı Giriniz</label>
                        <input type="text" class="form-control" name="city" required>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Sorgula</button>
                    <br />
                </form>
                @if (!string.IsNullOrEmpty(ViewBag.message))
                {
                    <div class="alert alert-success mt-3">
                        @ViewBag.message
                    </div>
                }
            </div>
        </div>
    </div>
</div>